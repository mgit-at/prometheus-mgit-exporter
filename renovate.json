{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "prHourlyLimit": 2,
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true
    },
    "packageRules": [
        {
        "matchUpdateTypes": ["minor","patch"],
        "matchCurrentVersion": "!/^0/",
        "automerge": true
        }
    ]
}